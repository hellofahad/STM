<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="15dp">


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_price"
            android:background="@drawable/my_border"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dayslift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_price_part"
            android:layout_alignBottom="@+id/item_price_part"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:textColor="#4B000000" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/switchico"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dayslift"
            android:layout_alignParentStart="true"
            android:autoSizeTextType="uniform"
            android:text="0.0 س.ر"
            android:textAlignment="center"
            android:textColor="#4B000000"
            android:textSize="18sp" />

        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/progressBar2"
            style="@style/NumberProgressBar_Grace_Yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/endDate"
            android:layout_alignParentStart="true"
            app:progress_reached_bar_height="5dp"
            app:progress_text_size="15dp" />


        <TextView
            android:id="@+id/item_price_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressBar2"
            android:layout_alignParentEnd="true"
            android:text="ewsd"
            android:textColor="#4B000000" />

        <TextView
            android:id="@+id/endDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="2018/05/01"
            android:textAlignment="viewStart"
            android:textColor="#4B000000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/item_price"
            android:layout_alignTop="@+id/item_name"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_save" />


    </RelativeLayout>

</android.support.v7.widget.CardView>